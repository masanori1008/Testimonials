<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">aht_testimonials_form.aht_testimonials_data_source</item>
            <item name="deps" xsi:type="string">aht_testimonials_form.aht_testimonials_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Testimonials Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <!-- <item name="config" xsi:type="array">
        <item name="dataScope" xsi:type="string">data</item>
        <item name="namespace" xsi:type="string">aht_testimonials_form</item>
    </item> -->
    <settings>
        <buttons>
            <button name="save" class="AHT\Testimonials\Block\Adminhtml\Testimonials\Edit\SaveButton"/>
            <button name="delete" class="AHT\Testimonials\Block\Adminhtml\Testimonials\Edit\DeleteButton"/>
            <button name="back" class="AHT\Testimonials\Block\Adminhtml\Testimonials\Edit\BackButton"/>
        </buttons>
        <namespace>aht_testimonials_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>aht_testimonials_form.aht_testimonials_data_source</dep>
        </deps>
    </settings>

    <!-- hien thi du lieu tren form -->
    <dataSource name="aht_testimonials_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="testimonials/index/save"/>
        </settings>
        <dataProvider class="AHT\Testimonials\Model\ResourceModel\Testimonials\DataProvider" name="aht_testimonials_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>id</dataScope>
            </settings>
        </field>
        <field name="is_active" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Testimonial</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="name" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>name</dataScope>
            </settings>
        </field>
        <field name="email" sortOrder="21" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Email</label>
                <dataScope>email</dataScope>
            </settings>
        </field>
        <field name="designation" sortOrder="22" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Designation</label>
                <dataScope>designation</dataScope>
            </settings>
        </field>
        <field name="contact" sortOrder="23" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Contact</label>
                <dataScope>contact</dataScope>
            </settings>
        </field>
        <field name="message" sortOrder="24" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Message</label>
                <dataScope>message</dataScope>
            </settings>
        </field>
        <field name="image" sortOrder="25" formElement="imageUploader" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">index</item>
                </item>
            </argument>
            <settings>
                <elementTmpl>ui/form/element/uploader/image</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Image</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <required>false</required>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="testimonials/index/upload"/>
                        </uploaderConfig>
                        
                        <previewTmpl>Magento_Catalog/image-preview</previewTmpl>
                        <openDialogTitle>Media Gallery</openDialogTitle>
                        <initialMediaGalleryOpenSubpath>testimonials/index</initialMediaGalleryOpenSubpath>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="customer_name" sortOrder="26" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Customer</label>
                <dataScope>customerid</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AHT\Testimonials\Ui\Component\Customer\Column\ListOptionForm" />
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>